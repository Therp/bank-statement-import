<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="ponto_buffer_tree">
        <field name="name">ponto.buffer.tree</field>
        <field name="model">ponto.buffer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="provider_id" />
                <field name="date" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="ponto_buffer_form">
        <field name="name">ponto.buffer.form</field>
        <field name="model">ponto.buffer</field>
        <field name="arch" type="xml">
            <form>
                <group name="ponto_buffer_main">
                    <field name="provider_id" />
                    <field name="date" />
                </group>
                <group name="ponto_buffer_lines" string="Buffer Lines">
                    <field name="buffer_line_ids" mode="tree" nolabel="1" colspan="2">
                        <tree>
                            <field name="date_time" />
                            <field name="ponto_id" />
                            <field name="transaction_data" />
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="ponto_buffer_search">
        <field name="model">ponto.buffer</field>
        <field name="arch" type="xml">
            <search>
                <field name="provider_id" />
                <field name="date" />
                <group name="groupby">
                    <filter
                        name="provider_groupby"
                        string="Provider"
                        context="{'group_by': 'provider_id'}"
                    />
                    <filter
                        name="date_groupby"
                        string="Effective Date"
                        context="{'group_by': 'date'}"
                    />
                </group>
            </search>
        </field>
    </record>

</odoo>
